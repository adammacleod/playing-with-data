<!DOCTYPE html>
<html>
<head>
  <title>PlayingWithData</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <%= link_to 'Playing With Data', root_path, html_options = { class: "brand" } %>
        <div class="nav-collapse collapse">
          <ul class="nav pull-right">
            <li><%= link_to "New Bill", new_bill_path %></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="span12">
        <% if flash[:notice] %>
          <p class="alert alert-success"><%= flash[:notice] %></p>
        <% end %>
        <% if flash[:error] %>
          <p class="alert alert-error"><%= flash[:error] %></p>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="span12">
        <%= yield %>
      </div>
    </div>

    <hr>

    <footer>
      <p>&copy; Nobody 2012</p>
    </footer>

  </div> <!-- /container -->

</body>
</html>
